{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "self-assistant-plugin 的 plugin 级别 hooks 配置",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/user_prompt_submit.py",
            "statusMessage": "记录用户输入..."
          }
        ],
        "description": "记录所有用户提交的 prompt"
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/pre_tool_use.py",
            "timeout": 30,
            "statusMessage": "安全检查..."
          },
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/event_logger.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/skills/continuous-learning-v2/hooks/observe.sh pre",
            "timeout": 5,
            "statusMessage": "观察学习中..."
          }
        ],
        "description": "安全防护 + 事件日志 + continuous-learning-v2 观察"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/post_tool_use.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/event_logger.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/skills/continuous-learning-v2/hooks/observe.sh post",
            "timeout": 5,
            "statusMessage": "记录学习..."
          }
        ],
        "description": "工具执行结果 + 事件日志 + continuous-learning-v2 观察"
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/notification.py --notify --tts",
            "timeout": 10,
            "statusMessage": "发送通知..."
          },
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/event_logger.py",
            "timeout": 10
          }
        ],
        "description": "Claude 需要输入时通知用户"
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/event_logger.py",
            "timeout": 10
          }
        ],
        "description": "记录权限请求"
      }
    ],
    "Stop": [
      {
        "matcher": "skill == \"quick-commit\"",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/skills/quick-commit/scripts/quick-commit-done.js\"",
            "statusMessage": "quick-commit 执行完成"
          }
        ],
        "description": "quick-commit 执行完成后的通知"
      }
    ]
  }
}

{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "self-assistant-plugin 的 plugin 级别 hooks 配置",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "skill == \"quick-commit\"",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/skills/quick-commit/scripts/check-spotless.sh",
            "timeout": 120,
            "statusMessage": "检测并执行 Spotless 格式化..."
          }
        ],
        "description": "quick-commit 执行前检查并运行 Maven Spotless 格式化"
      }
    ],
    "Stop": [
      {
        "matcher": "skill == \"quick-commit\"",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/skills/quick-commit/scripts/quick-commit-done.sh",
            "statusMessage": "quick-commit 执行完成"
          }
        ],
        "description": "quick-commit 执行完成后的通知"
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/plugin-test-hook.sh",
            "statusMessage": "Plugin 级别 hook 测试..."
          }
        ],
        "description": "测试用的 plugin 级别 hook - 在任意 skill 执行完成后打印消息"
      }
    ]
  }
}
